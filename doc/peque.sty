% Tips
\newenvironment{tip}
{
  \vspace{+10pt}
  \begin{it}
  \noindent
  \begin{minipage}{\linewidth}
  \rightskip=1cm
  \leftskip=1cm
  \setlength\intextsep{0pt}
  \begin{wrapfigure}[1]{l}[2cm]{0cm}
    \hspace{-1.5cm}
    \includegraphics[width=1.5cm]{tip}
  \end{wrapfigure}
}
{
  {}
  \end{minipage}
  \end{it}
  \vspace{+10pt}
}

% Captions
