# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# npm-packages
newpath=/container/npm-packages/bin
[[ ":$PATH:" != *":$newpath:"* ]] && export PATH="$PATH:$newpath"

# CUDA
newpath=/usr/local/cuda/bin
[[ ":$PATH:" != *":$newpath:"* ]] && export PATH="$PATH:$newpath"
newpath=/usr/local/cuda/lib64
[[ ":$LD_LIBRARY_PATH:" != *":$newpath:"* ]] && export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$newpath"
